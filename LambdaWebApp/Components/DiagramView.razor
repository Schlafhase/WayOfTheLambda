@using SkiaSharp.Views.Blazor
<ErrorBoundary>
    <SKCanvasView @ref="_canvas"
                  id="@("_" + _id)"
                  OnPaintSurface="onPaintSurface"
                  @onmousedown="onMouseDown"
                  @onmousemove="onMouseMove"
                  @onmouseup="onMouseUp"
                  @onwheel="onMouseWheel"
    ></SKCanvasView>
</ErrorBoundary>

<style>
    @("#_" + _id + "{"
      + $"width: {(Width is null ? "max(100%, 2000px)" : Width + "px")};"
      + $"height: {(Height is null ? "max(100%, 2000px)" : Height + "px")};"
      + "}"
    )
</style>